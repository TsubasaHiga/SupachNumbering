{
  "manifest_version": 3,
  "name": "Supach Numbering",
  "description": "__MSG_ext_desc__",
  "homepage_url": "https://chrome-extensions.cofus.work/",
  "author": "HigaTsubasa",
  "version": "1.0.6",
  "default_locale": "en",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://youtube.com/live_chat*",
        "*://www.youtube.com/live_chat*",
        "*://m.youtube.com/live_chat*",
        "*://studio.youtube.com/live_chat*",
        "*://youtube.com/live_chat_replay*",
        "*://www.youtube.com/live_chat_replay*",
        "*://m.youtube.com/live_chat_replay*",
        "*://studio.youtube.com/live_chat_replay*",
        "*://studio.youtube.com/*"
      ],
      "js": [
        "chatScript.bundle.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://youtube.com/*",
        "*://www.youtube.com/*",
        "*://m.youtube.com/*",
        "*://studio.youtube.com/*"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": [
        "*://youtube.com/*",
        "*://www.youtube.com/*",
        "*://m.youtube.com/*",
        "*://studio.youtube.com/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "background"
  ]
}
